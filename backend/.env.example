# Budgetly Configuration
# OpenAI API Key for AI features (Receipt OCR, Insights, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/google/callback

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for password reset emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Budgetly
FRONTEND_URL=http://localhost:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True


# MongoDB Configuration
export USE_MONGO=false
export MONGODB_URI="mongodb://localhost:27017"
export MONGODB_DB="budgetly"
# Uncomment the above lines and set your MongoDB connection details to enable MongoDB support